{% extends "layout/base.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/checkboxes/macro.njk" import govukCheckboxes %}
{% from "govuk/components/error-summary/macro.njk" import govukErrorSummary %}

{% block pageTitle %}
    {% if errorMap | length %}Errors: {% endif %}T&Cs + Privacy consent
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <form class="form" action="" method="post" novalidate>

                {% if errorMap | length %}
                    {{ govukErrorSummary({
                        titleText: "There is a problem",
                        errorList: errorMap | validationErrorsToGovUkErrorList
                    }) }}
                {% endif %}

                <h1 class="govuk-heading-l">We need to verify your email</h1>

                <p class="govuk-body-m">Before we send you an email to verify name@email.com, you will need to
                    read and consent to the <a href="#" class="govuk-link">T&Cs</a> and <a href="#"
                                                                                           class="govuk-link">privacy
                        policy</a>.</p>

                {{ govukCheckboxes({
                    idPrefix: "terms-and-conditions",
                    name: "termsAndConditions",
                    items: [
                        {
                            value: true,
                            name: "consentToTermsAndConditions",
                            text: "I consent to T&Cs",
                            checked: consentToTermsAndConditions
                        },
                        {
                            value: true,
                            name: "consentToDataSharing",
                            text: "I consent to my details being shared with any Government department and...",
                            checked: consentToDataSharing
                        }
                    ]
                }) }}

                <div class="govuk-!-padding-bottom-6">
                    <h3 class="govuk-heading-s">My email is not correct</h3>

                    <a href="{{ ROUTES.CREATE_ACCOUNT.YOUR_DETAILS }}" class="govuk-link">Change email</a>
                </div>

                {{ govukButton({
                    text: "Continue"
                }) }}

            </form>
        </div>
    </div>

{% endblock %}