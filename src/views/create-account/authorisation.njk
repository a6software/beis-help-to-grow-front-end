{% extends "layout/base.njk" %}

{% from "govuk/components/button/macro.njk" import govukButton %}
{% from "govuk/components/warning-text/macro.njk" import govukWarningText %}

{% block pageTitle %}
    Director or authorised
{% endblock %}

{% block content %}
    <div class="govuk-grid-row">
        <div class="govuk-grid-column-two-thirds">
            <form class="form" action="" method="">
                <div class="govuk-form-group">
                    <fieldset class="govuk-fieldset">
                        <legend>
                            <h1 class="govuk-heading-l">Are you a director or an authorised personnel of the
                                company?</h1>
                        </legend>
                        <p class="govuk-body-m">Application to HtG can only be made by a director of the company or an
                            authorised personnel of the company. Checks will be carried out in the application to verify
                            applicant details.</p>
                        {{ govukWarningText({
                            text: "Continue only if you are the director or an authorised personnel of the company.",
                            iconFallbackText: "Warning"
                        }) }}
                    </fieldset>
                    <br>

                    {{ govukButton({
                        href: '/create-account/email-address',
                        text: "Continue"
                    }) }}

                </div>
            </form>

        </div>
    </div>

{% endblock %}